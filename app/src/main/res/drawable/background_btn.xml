<?xml version="1.0" encoding="utf-8"?>
<selector android:enterFadeDuration="400" android:exitFadeDuration="400" xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="2dp"/>
            <solid android:color="@color/primaryColorVariant"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="2dp"/>
            <solid android:color="@color/primaryColor"/>
        </shape>
    </item>
</selector>